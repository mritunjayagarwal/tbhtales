    <!-- Latest compiled and minified CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/authenticate.css">
</head>
<body>
    <div class="container-fluid"style = "background: #0E0E10">
        <div class="row no-gutter">
          <!-- <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image">
             <h2 class = "text-center" style = "color: transparent;font-weight: bolder">An Anonymous Network</h2>
             <div class="h-100 row align-items-center">
              <div class="col" style="background:#005ea1">
                <h2 style = "color: #fff;font-weight: bolder">An Anonymous Network</h2>
              </div>
            </div>
          </div> -->
          <div class="col-md-12 col-lg-12">
            <% if(hasErrors){ %>
              <% _.forEach(errors, (error) => { %>
                <div class = "alert alert-danger text-center">
                    <a href = "#" class = "close" data-dismiss = "alert" aria-label="close">&times;</a>
                <%= error %>
                </div>
              <% }) %>
            <% } %>
            <!-- <h3 class="login-heading text-center" style = "font-weight: bold;color: #D3D3D3;font-size: 40px;">GLA NETWORK</h3> -->
            <div class="login d-flex align-items-center py-5">
              <div class="container">
                <div><img src="/img/logo.png" style = "width: 150px;height:auto;display:block;margin:auto;margin-bottom: 30px;margin-top: -30px"></div>
                <div class="row" style = "margin-bottom: 100px;">
                  <div class="col-md-6 col-lg-6 mx-auto">
                    <h3 class="login-heading mb-4 text-center" style = "color: #fff">Message <%= vuser.username %> Anonymously</h3>
                    <form action = "/send" method = "POST">
                      <input type="text" name = "uid" value = "<%= vuser._id %>" hidden>
                      <div class="form-label-group">
                        <textarea name = "message" class="form-control" placeholder="Type Your message here" required autofocus></textarea>
                      </div>
                      <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Message Secretly</button>
                      <div class="text-center">
                        <a class="small" href="/authenticate" style = "font-size: 17px;color: #ddd">Already a member? Login</a></div>
                    </form>
                  </div>
                </div>
                <h3 class="login-heading mt-4 text-center" style = "color: #e3e3e3">FOR YOU <br>AND YOUR LOVED ONES</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
</body>
</html>